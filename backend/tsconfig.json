{
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution" : "node",
      "target": "es6",
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "strict": true,
      "strictFunctionTypes":true
    },
    "include": [
      "src/**/*.ts","**/*.ts", "**/*.tsx"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ],   
     "types": [
      "@types/node",
      "@types/knex"
    ]
  }